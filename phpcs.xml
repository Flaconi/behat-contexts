<?xml version="1.0"?>
<ruleset name="OrderService">
    <description>The coding standard for the order service.</description>

    <file>src/</file>

    <exclude-pattern>*/Standards/*/Tests/*.(inc|css|js)</exclude-pattern>
    <exclude-pattern>*/*.(css|js)</exclude-pattern>

    <arg name="colors" />
    <arg value="np"/>

    <rule ref="FlaconiCodingStandard" />


    <rule ref="SlevomatCodingStandard.TypeHints.TypeHintDeclaration.MissingParameterTypeHint">
        <exclude-pattern>*/ClassResolver.php</exclude-pattern>
    </rule>
</ruleset>
